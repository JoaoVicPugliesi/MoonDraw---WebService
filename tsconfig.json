{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "NodeNext",
    "target": "ES2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "isolatedModules": true,

    "baseUrl": "./src",
    "paths": {
      "@adapters/*": ["adapters/*"],
      "@application/*": ["application/*"],
      "@domain/*": ["domain/*"],
      "@infra/*": ["infra/*"],
      "@routes/*": ["routes/*"],
      "@server/*": ["server/*"],
      "@tests/*": ["tests/*"],
    }
  }
}
